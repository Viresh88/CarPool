            android:exported="false" />
        <activity
            android:name=".RequestRideActivity"
            android:exported="false" />
        <activity
            android:name=".OfferPool"
            android:exported="false" />
        <activity
            android:name=".MyRidesActivity"
            android:exported="false" />
