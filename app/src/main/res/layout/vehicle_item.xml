<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:background="@drawable/customborder_rounded"
    android:padding="16dp"
    android:elevation="4dp">

    <!-- Pickup Location Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Pickup Location Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_pickup_location"
            android:contentDescription="Pickup Location Icon"
            android:layout_gravity="center_vertical"
            app:tint="@color/primary_dark" />

        <!-- Pickup Location Text -->
        <TextView
            android:id="@+id/tvPickupLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Location"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/primary_dark"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Drop Location Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Drop Location Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_drop_location"
            android:contentDescription="Drop Location Icon"
            android:layout_gravity="center_vertical"
            app:tint="@color/primary_dark" />

        <!-- Drop Location Text -->
        <TextView
            android:id="@+id/tvDropLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop Location"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/primary_dark"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Vehicle Model Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Vehicle Model Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_vehicle_model"
            android:contentDescription="Vehicle Model Icon"
            android:layout_gravity="center_vertical"
            app:tint="@color/primary_dark" />

        <!-- Vehicle Model Text -->
        <TextView
            android:id="@+id/tvVehicleModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model: Honda Accord"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Vehicle Year Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Vehicle Year Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_vehicle_year"
            android:contentDescription="Vehicle Year Icon"
            android:layout_gravity="center_vertical"
            app:tint="@color/primary_dark" />

        <!-- Vehicle Year Text -->
        <TextView
            android:id="@+id/tvVehicleYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year: 2020"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Vehicle Number Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Vehicle Number Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_vehicle_number"
            android:contentDescription="Vehicle Number Icon"
            android:layout_gravity="center_vertical"
            app:tint="@color/primary_dark" />

        <!-- Vehicle Number Text -->
        <TextView
            android:id="@+id/tvVehicleNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number: ABC-1234"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Seats Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Seats Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/seats"
            android:contentDescription="Seats Icon"
            android:layout_gravity="center_vertical"
            app:tint="@color/primary_dark" />

        <!-- Seats Text -->
        <TextView
            android:id="@+id/tvSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seats: 3"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>
