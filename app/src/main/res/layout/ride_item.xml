<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/customborder_rounded"
    android:padding="16dp"
    android:elevation="4dp">

    <!-- Pickup Location Icon -->
    <ImageView
        android:id="@+id/ivPickupLocationIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primary_dark" />

    <!-- Pickup Location Text -->
    <TextView
        android:id="@+id/tvPickupLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pickup Location"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:paddingStart="8dp"
        app:layout_constraintStart_toEndOf="@id/ivPickupLocationIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Drop Location Icon -->
    <ImageView
        android:id="@+id/ivDropLocationIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/location"
        android:layout_marginTop="16dp"
        android:tint="@color/primary_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPickupLocation" />

    <!-- Drop Location Text -->
    <TextView
        android:id="@+id/tvDropLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Drop Location"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:paddingStart="8dp"
        app:layout_constraintStart_toEndOf="@id/ivDropLocationIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPickupLocation"
        android:layout_marginTop="16dp" />

    <!-- Date and Time Icon -->
    <ImageView
        android:id="@+id/ivDateTimeIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/calendar"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDropLocation"
        app:tint="@color/primary_dark" />

    <!-- Date and Time Text -->
    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date and Time"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:paddingStart="8dp"
        app:layout_constraintStart_toEndOf="@id/ivDateTimeIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDropLocation"
        android:layout_marginTop="16dp" />

    <!-- Seats Icon -->
    <ImageView
        android:id="@+id/ivSeatsIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/seats"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDateTime"
        app:tint="@color/primary_dark" />

    <!-- Seats Text -->
    <TextView
        android:id="@+id/tvSeats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Seats: 3"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:paddingStart="8dp"
        app:layout_constraintStart_toEndOf="@id/ivSeatsIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDateTime"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
